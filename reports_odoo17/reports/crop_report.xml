<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Report Action Definition -->
    <report
        id="crop_report"
        model="crop"
        string="Crop Report"
        report_type="qweb-pdf"
        name="crop_reports.crop_report_template"
    />

    <!-- QWeb Template for the Report -->
    <template id="crop_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Crop Report</h2>
                    <p>Generated on: <t t-esc="format_date(context_today())"/></p>
                    <p>Generated by: <span t-field="user.name"/></p>
                    <p>Total Crops: <span t-esc="len(docs)"/></p>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="crop">
                                <tr>
                                    <td><span t-field="crop.name"/></td>
                                    <td><span t-field="crop.descripcion"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
